<?xml version="1.0" encoding="UTF-8"?>
<component type="addon">
  <id>io.elementary.switchboard.onlineaccounts</id>
  <extends>io.elementary.switchboard</extends>
  <name>Online Accounts Settings</name>
  <summary>Manage online accounts and connected applications</summary>
  <icon type="stock">preferences-desktop-online-accounts</icon>
  <translation type="gettext">online-accounts-plug</translation>
  <releases>
    <release version="6.2.0" date="2021-08-24" urgency="medium">
      <description>
        <ul>
          <li>Edit saved IMAP accounts</li>
          <li>Automatically detect authentication method for IMAP</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="6.1.0" date="2021-07-28" urgency="medium">
      <description>
        <ul>
          <li>Verify login credentails when saving IMAP accounts</li>
          <li>Set up Archive, Drafts, Sent, and Templates folders for IMAP</li>
          <li>Close "Add Account" popover when an item is selected</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="6.0.0" date="2021-07-15" urgency="medium">
      <description>
        <ul>
          <li>Complete redesign</li>
          <li>Fix blurry icons on HiDPI</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
  </releases>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/switchboard-plug-onlineaccounts/master/data/screenshot.png</image>
    </screenshot>
  </screenshots>
  <url type="homepage">https://elementary.io</url>
  <url type="bugtracker">https://github.com/elementary/switchboard-plug-onlineaccounts/issues</url>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0+</project_license>
</component>
